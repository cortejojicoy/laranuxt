{
  "files.associations": {
      "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
      "strings": true
  },
  "prettier.enable": false,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.php$",
        "isAsync": true,
        "cmd": "./vendor/bin/pint ${file}"
      },
    ]
  },
}
